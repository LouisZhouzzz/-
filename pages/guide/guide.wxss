/* pages/guide/guide.wxss */
.title {
  display: flex;
  align-items: center;
  justify-content: center;
}
.list-item 
{
  border-radius: 0;
  height: 100rpx;
  padding-right: 0;
  padding-left: 1em;
  background-color: white !important;
  text-align: left;
  font-size: 16px;
  max-height: 100rpx;
  transition: 500ms linear 0ms;
  overflow: hidden;
}
.list-item:nth-child(n + 2) 
{
  box-shadow: 0 0 30px 0 #e0e0e0; 
}
.list-item image 
{
  float: right;
  height: 50rpx;
  width: 50rpx;
  margin: 25rpx 10rpx 0; 
}
.list-item .title 
{
  height: 100rpx;
  line-height: 100rpx; 
}
.list-item.list-item-hover 
{
  background-color: #ccc; 
}